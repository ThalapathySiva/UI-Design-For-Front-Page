<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/gf"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded"
    >
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        app:menu="@menu/activity_main2_drawer"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_main2"
        android:layout_height="match_parent">


    </android.support.design.widget.NavigationView>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/main.appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/main.collapsing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            >

            <ImageView
                android:id="@+id/main.imageview.placeholder"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:tint="#11000000"

                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.9"
                />


                <LinearLayout
                    android:id="@+id/main.linearlayout.title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="bottom|center"
                        android:text="Awaaz"
                        android:textColor="@android:color/white"
                        android:textSize="30sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:text="A Voice For Change"
                        android:textColor="@android:color/white"
                        />

                </LinearLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:behavior_overlapTop="30dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            app:cardElevation="8dp"
            app:contentPadding="16dp"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8dp"
                android:text="AWAAZ NGO"
                android:textStyle="bold"
                android:layout_marginLeft="60dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="22sp"
                />
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="@string/s"
                    android:textSize="18sp"/>
                <Button
                    android:layout_width="115dp"
                    android:layout_height="50dp"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    style="@style/Widget.AppCompat.Button"
                    android:text="Learn More"/>
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:id="@+id/SliderDots"
                    android:layout_below="@+id/viewPager"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8dp"
                    android:layout_marginLeft="45dp"
                    android:textColor="#000"
                    android:text="Helping and Providing"
                    android:textSize="22sp"
                    />
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="8dp"
                    android:text="@string/t"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="18sp"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    style="@style/Widget.AppCompat.Button"
                    android:text="Donate"/>
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_marginTop="20dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_menu_gallery"
                        android:id="@+id/qq"
                        android:layout_marginLeft="33dp"
                        />
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/poi"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_event_black_24dp"
                        android:layout_marginLeft="225dp"
                        />
                    <ImageView
                        android:layout_marginTop="50dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_group_black_24dp"
                        android:id="@+id/ii"
                        android:layout_below="@+id/qq"
                        android:layout_marginLeft="33dp"
                        />
                    <ImageView
                        android:layout_marginTop="50dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_attach_money_black_24dp"
                        android:id="@+id/oi"
                        android:layout_below="@+id/poi"
                        android:layout_marginLeft="225dp"
                        />
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#ccc"
                        android:textStyle="bold"
                        android:text="Gallery"
                        android:layout_marginLeft="40dp"
                        android:layout_below="@+id/qq"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#ccc"
                        android:textStyle="bold"
                        android:text="Events"
                        android:layout_marginLeft="240dp"
                        android:layout_below="@+id/poi"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#ccc"
                        android:textStyle="bold"
                        android:text="Join Us"
                        android:id="@+id/ju"
                        android:layout_marginLeft="40dp"
                        android:layout_below="@+id/ii"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:textColor="#ccc"
                        android:id="@+id/ttt"
                        android:textStyle="bold"
                        android:text="Donate"
                        android:layout_marginLeft="240dp"
                        android:layout_below="@+id/oi"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ju"
                        android:id="@+id/logo"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/logo2"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="8dp"
                        android:text="AWAAZ NGO"
                        android:id="@+id/lly"
                        android:layout_below="@id/logo"
                        android:textStyle="bold"
                        android:layout_marginLeft="90dp"
                        android:textColor="#000"
                        android:textSize="22sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lly"
                        android:textAlignment="center"
                        android:text="@string/ga"
                        android:id="@+id/jh"
                        android:gravity="center"
                        android:lineSpacingExtra="8dp"
                        android:textSize="18sp"
                        android:layout_marginTop="20dp"
                        />
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="8dp"
                        android:text="Subscribe to Our Newsletter"
                        android:id="@+id/jhh"
                        android:layout_below="@id/jh"
                        android:textStyle="bold"
                        android:layout_marginLeft="80dp"
                        android:textColor="#000"
                        android:textSize="12sp" />
                    <EditText
                        android:layout_marginTop="9dp"
                        android:layout_below="@+id/jhh"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:id="@+id/aq"
                        android:textColor="#fff"
                        android:paddingLeft="10dp"
                        android:background="@drawable/edit" />
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="8dp"
                        android:text="@string/gaa"
                        android:id="@+id/ugu"
                        android:layout_below="@id/aq"
                        android:textStyle="bold"
                        android:layout_marginLeft="80dp"
                        android:textColor="#ccc"
                        android:textSize="10sp" />
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/fb"
                        android:layout_marginLeft="120dp"
                        android:layout_below="@+id/ugu"/>
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/twitter"
                        android:layout_marginLeft="140dp"
                        android:layout_below="@+id/ugu"/>
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/index"
                        android:layout_marginLeft="160dp"
                        android:layout_below="@+id/ugu"/>
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/instagram"
                        android:layout_marginLeft="180dp"
                        android:layout_below="@+id/ugu"/>




                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/main.toolbar"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/primary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:title=""
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/main.textview.title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Home"
                android:textColor="#000"
                android:textSize="14sp"
                />

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_width"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        app:border_color="@android:color/white"
        app:border_width="2dp"
        app:finalHeight="@dimen/image_final_width"
        app:finalYPosition="2dp"
        app:layout_behavior="saulmm.myapplication.AvatarImageBehavior"
        app:startHeight="2dp"
        app:startToolbarPosition="2dp"
        app:startXPosition="2dp"
        />
    </android.support.design.widget.CoordinatorLayout>
</android.support.v4.widget.DrawerLayout>
